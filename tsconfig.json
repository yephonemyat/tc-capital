{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "es2020"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "react",
      "react-native"
    ],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "App.tsx",
    "index.tsx",
    "src"
  ],
  "extends": "expo/tsconfig.base"
}
